{
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "html",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
      }
    }
  ]
}
